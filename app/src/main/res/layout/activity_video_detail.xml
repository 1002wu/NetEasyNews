<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <io.vov.vitamio.widget.VideoView
        android:id="@+id/vitamio"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/buffer_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/vitamio"
        android:layout_marginLeft="12dp"
        android:textColor="#e6ff01"/>

    <TextView
        android:id="@+id/net_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/vitamio"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/buffer_percent"
        android:textColor="#04fa00"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/framelayout_news_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/page_loading"/>
        <include layout="@layout/page_empty"/>
        <include layout="@layout/page_error"/>
    </FrameLayout>


</LinearLayout>